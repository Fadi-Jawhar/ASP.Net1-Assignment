@model IndexViewModel

<h1>My Account</h1>

<div>@Model.Profile.FirstName @Model.Profile.LastName</div>
<div>@Model.Profile.PhoneNumber @Model.Profile.Email</div>
<img src="~/images/profiles/@Model.Profile.ImageName" alt="(No Profile Image)" height="120" width="145" />
<p></p>
<a asp-controller="Account" asp-action="SignOut">Sign Out</a>
<p></p>
<button class="btn-theme mt-3" onclick="location.href='@Url.Action("Edit", "Account")'">Edit User Info</button>
@{
    if (User.IsInRole("Administrator"))
    {
        <button class="btn-theme mt-3" onclick="location.href='@Url.Action("UserManagement", "Admin")'">Edit User Info Admin</button>
        <button class="btn-theme mt-3" onclick="location.href='@Url.Action("AddProduct", "ProductManager")'">Add Product</button>
    }

    if (User.IsInRole("ProductManager"))
    {
        <button class="btn-theme mt-3" onclick="location.href='@Url.Action("AddProduct", "ProductManager")'">Add Product</button>
    }
}

